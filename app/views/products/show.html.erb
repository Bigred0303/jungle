<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <%= image_tag @product.image.url, class: 'main-img' %>
    <div>
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <div class="quantity">
        <% if @product.quantity.to_i == 0 %>
          <span class="badge badge-danger">Sold Out</span>
        <% end %>
        <span><%= @product.quantity %> in stock at </span>
        <span><%= humanized_money_with_symbol @product.price %></span>
      </div>

      <div class="price">
        <% if @product.quantity.to_i > 0 %>
          <!-- Add to Cart button only visible when in stock -->
          <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn btn-success', method: :post do %>
            <%= fa_icon "shopping-cart", text: 'Add' %>
          <% end %>
        <% else %>
          <%= button_to 'Sold Out', '#', class: 'btn btn-danger', disabled: true %>
        <% end %>
      </div>
    </div>
  </article>
</section>